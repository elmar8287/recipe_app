<div class = "add-food-form">

  <%= form_with model: [current_user.foods.build], class: "form" do |f| %>

      <%= f.label :food_name  %>
      <%= f.text_field :name, autofocus: true, placeholder: 'Bananas'%>

      <%= f.label :measurment_units %>
      <%= f.text_field :measurmnet_units, placeholder: 'grams/kilo/piece'%>

      <%= f.label :price %>
      <%= f.number_field :price, placeholder: '30$', min: 0 %>
    <p>
      <%= f.submit 'Add food', class: 'add-food-btn' %>
    </p>
  <% end %>

 <ul class = "food-form-errors">
    <%@food.errors.full_messages.each do |msg|%>
      <li class = "food-form-errors-list">
        <%= msg%>
      </li>
    <%end%>
 </ul>

  <div class = "back-btn-holder">
    <button class = "back-btn">
      <%= link_to 'Back', foods_path%>
    </button>
  </div>
</div>
